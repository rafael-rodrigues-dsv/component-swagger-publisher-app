{# Single Schema Card #}
{# Expects: schema_name, schema object, confluence_preview flag #}
<div class="{% if confluence_preview %}panel-macro{% else %}schema-card{% endif %}" style="margin-bottom: 24px;" id="schema-{{ schema_name }}">
    <div class="{% if confluence_preview %}panel-header{% else %}schema-name{% endif %}">{{ schema_name }}</div>
    {% if schema.description %}
    <p style="margin-bottom: 12px;">{{ schema.description }}</p>
    {% endif %}

    {% if schema.properties %}
        {% if confluence_preview %}
        <table class="confluence-table">
            <thead>
                <tr>
                    <th>Property</th>
                    <th>Type</th>
                    <th>Required</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                {% for prop_name, prop in schema.properties.items() %}
                <tr>
                    <td><code>{{ prop_name }}</code></td>
                    <td>
                        {% if prop.ref %}
                            {% set ref_model = prop.ref.split('/')[-1] %}
                            <a href="javascript:void(0)" onclick="scrollToSchema('{{ ref_model }}')" class="schema-link">{{ ref_model }}</a>
                        {% elif prop.type == 'array' and prop.items %}
                            {% if prop.items.ref %}
                                {% set item_model = prop.items.ref.split('/')[-1] %}
                                array[<a href="javascript:void(0)" onclick="scrollToSchema('{{ item_model }}')" class="schema-link">{{ item_model }}</a>]
                            {% elif prop.items.type %}
                                <code>array[{{ prop.items.type }}]</code>
                            {% else %}
                                <code>array[object]</code>
                            {% endif %}
                        {% else %}
                            <code>{{ prop.type or 'object' }}</code>
                        {% endif %}
                    </td>
                    <td>
                        {% if prop_name in schema.required %}
                        <span class="status-lozenge status-warning">Required</span>
                        {% else %}
                        <span class="status-lozenge status-default">Optional</span>
                        {% endif %}
                    </td>
                    <td>{{ prop.description or '-' }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% else %}
        <div class="schema-properties">
            <strong>Properties:</strong>
            {% for prop_name, prop in schema.properties.items() %}
            <div class="property-item">
                <span class="property-name">{{ prop_name }}</span>
                <span class="property-type">{{ prop.type or 'object' }}</span>
                {% if prop_name in schema.required %}
                <span class="param-required">required</span>
                {% endif %}
                <span class="property-description">{{ prop.description or '' }}</span>
            </div>
            {% endfor %}
        </div>
        {% endif %}
    {% endif %}
</div>

