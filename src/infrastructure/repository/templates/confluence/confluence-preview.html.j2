<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ api.info.title }} - Confluence Preview</title>
    <style>
        {{ css_content }}
    </style>
</head>
<body>
    {# Confluence Header #}
    {% include 'partials/preview/header.html.j2' %}

    <!-- Main Layout -->
    <div class="confluence-layout">
        {# Sidebar Navigation (Page Tree) #}
        {% include 'partials/preview/sidebar.html.j2' %}

        <!-- Main Content Area -->
        <main class="confluence-content">
            {# Preview Notice #}
            {% include 'partials/preview/notice.html.j2' %}

            {# Overview Page #}
            {% include 'partials/preview/overview_page.html.j2' %}

            {# All Endpoint Pages #}
            {% include 'partials/preview/endpoints_pages.html.j2' %}

            {# Schemas Page #}
            {% include 'partials/preview/schemas_page.html.j2' %}

            {# Security Page #}
            {% include 'partials/preview/security_page.html.j2' %}
        </main>
    </div>

    {# JavaScript for navigation #}
    {% include 'partials/preview/scripts.html.j2' %}
</body>
</html>

